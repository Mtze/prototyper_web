<% provide(:title, @app.name + " " + @release.version) %>
<h1>Edit prototype</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@release, url: edit_app_release_path(@app, @release)) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <div class="form-group">
        <%= f.label :version, "Version *" %>
        <%= f.text_field :version, class: 'form-control', placeholder: "1.0.0", required: true %>
      </div>

      <div class="form-group">
        <%= f.label :description, "Description *" %>
        <%= f.text_field :description, class: 'form-control',
                                       placeholder: "Lorem ipsum", required: true %>
      </div>

      <div class="form-group">
        <%= f.label :url, "URL *" %>
        <%= f.text_field :url, class: 'form-control', placeholder: "http://marvelapp.com/ididid", required: true %>
      </div>
      <%= f.hidden_field :type, :value => Prototype.name %>

      <%= f.submit "Update prototype", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
