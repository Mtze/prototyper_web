<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to root_url, id: "logo" do %>
      <%= fa_icon "cubes" %>
      Prototyper
    <% end %>
    <nav>
      <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
          </button>
      </div>

      <ul class="collapse nav navbar-collapse navbar-nav navbar-right" id="bs-example-navbar-collapse-1">
        <% if logged_in? %>
          <li>
            <%= link_to apps_url do %>
              <%= fa_icon "home" %> &nbsp;App Management
            <% end %>
          </li>
          <li>
            <%= link_to accessible_apps_path do %>
              <%= fa_icon "rocket" %> &nbsp;My apps
            <% end %>
          </li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= fa_icon "user" %> &nbsp;My Account <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li>
                <%= link_to edit_user_path(current_user) do %>
                  <%= fa_icon "cogs" %> &nbsp;Settings
                <% end %>
              </li>
              <li class="divider"></li>
              <li>
                <%= link_to logout_path, method: "delete" do %>
                  <%= fa_icon "sign-out" %> &nbsp;Log out
                <% end %>
              </li>

            </ul>
          </li>
        <% else %>
          <li>
            <%= link_to login_path do %>
              <%= fa_icon "sign-in" %> &nbsp;Log in
            <% end %>
          </li>

        <% end %>
      </ul>

    </nav>
  </div>
</header>
